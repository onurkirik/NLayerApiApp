@model List<ProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-striped table-hover">
    <a asp-controller="Products" asp-action="Save" class="float-end fs-3 mb-2"><i class="fa-solid fa-plus text-warning"></i></a>
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Category</td>
            <td>Created Date</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>@product.Category.Name</td>
                <td>@product.CreatedDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Products" asp-action="Update" asp-route-id="@product.Id" class="fs-4">
                        <i class="fa-solid fa-pen-to-square text-warning"></i>
                    </a>
                </td>
                <td>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="fs-4">
                        <i class="fa-solid fa-trash-can text-warning"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

