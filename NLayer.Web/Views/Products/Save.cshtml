@model ProductDto
@{
    ViewData["Title"] = "Save";
}

<h1>Save Product</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Save" method="post" asp-controller="Products">
            <div class="form-group">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Stock"></label>
                <input class="form-control" asp-for="Stock" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label class="form-label">Categories</label>
                <select asp-for="CategoryId" asp-items="ViewBag.categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group float-end">
                <input  type="submit" value="Save" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>
